<%= add_grade_it.hidden_field :user_id, value: current_user.id %>
<%= add_grade_it.hidden_field :obtainedDate, value: Time.now %>
<div class="modal fade" id="addGrade" tabindex="-1" role="dialog" aria-labelledby="addGradeLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addGradeLabel">Dodaj ocenę</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Cofnij">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= add_grade_it.label "Wybierz ocenę", class: 'gradeSelect' %>
          <%= add_grade_it.select(:grade, %w(1 -2 2 +2 -3 3 +3 -4 4 +4 -5 5 +5 6), {},
                                  class: 'form-control', id: 'gradeSelect') %>
        </div>
        <div class="form-group">
          <%= add_grade_it.label :info, "Wybierz typ oceny", class: 'gradeSelect' %>
          <%= add_grade_it.select(:info, %w(Sprawdzian Kartkówka), {},
                                  {class: 'form-control', id: 'gradeTypeSelect'}) %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cofnij</button>
        <%= add_grade_it.submit(value: "Dodaj ocenę", class: 'btn btn-primary',
                                'data-disable-with': "Dodaję ocenę...", method: :post) %>
      </div>
    </div>
  </div>
</div>