<%= form_for Grade.new do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :obtained_date, value: Time.now %>
  <%= f.hidden_field :student_id, value: params[:student_id] %>
  <%= f.hidden_field :subject_id, value: params[:subject_id] %>
  <div class="modal-header">
    <h5 class="modal-title" id="addGradeLabel">Dodaj ocenę</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Cofnij">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <div class="form-group">
      <%= f.label "Wybierz ocenę", class: 'gradeSelect' %>
      <%= f.select(:grade, Grade.get_grades.keys, {},
                   class: 'form-control', id: 'gradeSelect') %>
    </div>
    <div class="form-group">
      <%= f.label :info, "Wybierz typ oceny", class: 'gradeSelect' %>
      <%= f.select(:info, Grade.get_grade_info, {},
                   {class: 'form-control', id: 'gradeTypeSelect'}) %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cofnij</button>
    <%= f.submit(value: "Dodaj ocenę", class: 'btn btn-primary',
                 'data-disable-with': "Dodaję ocenę...", method: :post) %>
  </div>
<% end %>
