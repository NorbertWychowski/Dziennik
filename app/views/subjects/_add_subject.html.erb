<%= form_for Subject.new do |f| %>
  <div class="modal-header">
    <h5 class="modal-title" id="addSubjectLabel">Dodaj przedmiot</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Cofnij">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <div class="form-group">
      <%= f.label "Podaj nazwę przedmiotu" %>
      <%= f.text_area(:subjectName, {class: 'form-control', id: 'subjectContent', 'rows': '1'}) %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cofnij</button>
    <%= f.submit(value: "Dodaj przedmiot", class: 'btn btn-primary', 'data-disable-with': "Dodaję przedmiot...", method: :post) %>
  </div>
<% end %>