<% content_for :title, @user.first_name + " " + @user.last_name + " - Klasy" %>
<div class="container-fluid">
  <div class="container container-radius container-shadow container-padding-small bg-light">
    <h4 class="float-left font-weight-light" style="margin-bottom: 26px">Twoje zajęcia</h4>
    <%= link_to "Powrót na stronę główną", root_path, class: 'float-right btn btn-dark' %>
    <div class="table-responsive">
      <table class="table">
        <thead>
        <tr>
          <th scope="col">Klasa</th>
          <th scope="col">Przedmiot</th>
          <th scope="col">Akcje</th>
        </tr>
        </thead>
        <tbody>
        <% @subjects.each do |s| %>
          <tr>
            <td><%= s.group.groupName %></td>
            <td><%= s.subject.subjectName %></td>
            <td>
              <ul class="grade-list">
                <li class="grade-list"><kbd class="badge">
                  <%= link_to "Zobacz podsumowanie zajęć",
                              {action: :user_groups, controller: :users, id: @user, teacher_group_subject: s.id},
                              class: 'modal-action' %>
                </kbd>
              </ul>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>